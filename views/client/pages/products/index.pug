extends ../../layouts/default.pug
include ../../mixins/box_head.pug
block main
    .container.my-3
        .row
            .col-12
                +box-head("Products List")
        .row
            each item in products
                .col-3.mb-3
                    .product-item
                        .inner-image
                            img(src=item.images[0] alt=item.title)
                        .inner-content
                            h3.inner-title #{item.title}
                            .inner-price-new #{(((100 - item.discountPercentage) * item.price) / 100).toFixed(0)}$
                            //- Render discount if exist only
                            if item.discountPercentage != 0
                                .inner-price-old #{item.price}$
                                .inner-discount -#{item.discountPercentage.toFixed(0)}%
