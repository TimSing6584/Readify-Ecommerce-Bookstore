extends ../../layouts/default.pug
include ../../../utils/alert.pug
block style
    link(href="/client/css/my_account.css" rel="stylesheet")
block main
    +alert-success("3000")
    +alert-error("3000")

    form#create-form.my-account-form(
        action=`/my_account/edit/${user._id}?_method=PATCH`
        enctype="multipart/form-data"
        method="POST"
    )
        h2 My Account
            a.btn.btn-primary(
                href="/my_account/history"
                order-history-link
            ) Order History
        .row.g-3
            .col-md-6
                label(for="fullname") Full Name
                input(
                    type="text"
                    id="fullname"
                    name="fullname"
                    placeholder="* Required"
                    value=user.fullname
                    required
                )

            .col-md-6
                label(for="email") Email
                input(
                    type="email"
                    id="email"
                    name="email"
                    placeholder="* Required"
                    value=user.email
                    required
                )

            .col-md-6
                label(for="password") Password
                input(
                    type="password"
                    id="password"
                    name="password"
                    placeholder="Change Password"
                )

            .col-md-6
                label(for="phone") Phone
                input(
                    type="tel"
                    id="phone"
                    name="phone"
                    placeholder="Your phone number"
                    value=user.phone ? user.phone : ""
                )
            .col-12
                label(for="avatar") Avatar
                input(
                    type="file"
                    class="form-control-file"
                    id="avatar"
                    name="avatar"
                    accept="image/*"
                    upload-image-input
                )
                if user.avatar
                    img(src=user.avatar upload-image-preview)

        .mt-4.text-end
            a.btn-reset.text-decoration-none(
                href=`/`
                cancel-create-account
            ) Cancel
            button.btn-submit(type="submit" submit-create-account) Update
block script
