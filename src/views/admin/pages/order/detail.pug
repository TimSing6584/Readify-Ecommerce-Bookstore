extends ../../layouts/default.pug
block style
    link(href="/admin/css/order.css" rel="stylesheet")
block main
    h1 Order Details
    table.order-table
        thead
            tr
                th No.
                th Image
                th Product
                th Price
                th Quantity
                th Total
        tbody
            each product, index in products
                tr
                    td #{index + 1}
                    td
                        img(
                            src=product.images
                            alt=product.title
                        )
                    td= product.title
                    td $#{product.priceNew}
                    td Ã—#{product.quantity}
                    td $#{product.totalPrice}
        a.btn.btn-secondary(href="/admin/order") Back
block script