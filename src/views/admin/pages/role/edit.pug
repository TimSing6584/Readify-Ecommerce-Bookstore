extends ../../layouts/default.pug
include ../../../utils/alert.pug
block style
    link(href="/admin/css/role.css" rel="stylesheet")
block main
    .role-edit
        h2 Edit Role
        +alert-error("5000")
        form(
            action=`/admin/role/edit/${role._id}?_method=PATCH`
            method="POST"
        )
            .form-group
                label(for="name") Role Name
                input(
                    type="text"
                    id="name"
                    name="name"
                    value=role.name
                    required
                )
                label(for="description") Short Description
                input(
                    type="text"
                    id="description"
                    name="description"
                    value=role.description
                )

            button.btn-submit(type="submit") Save Changes
            a.btn-cancel(href="/admin/role") Cancel

        if other_roles.length
            hr
            h4 Existing Roles
            ul.role-hint
                each c in other_roles
                    li= c.name
block script
    script(src="/admin/js/role.js")